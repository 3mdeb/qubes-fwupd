%define FWUPD_QUBES_DIR /usr/share/qubes-fwupd
%define PKI /etc/pki/fwupd
%define GPG_DIR /home/user/.gnupg

Name: qubes-fwupd-vm
Version: @VERSION@
Release: @REL@%{?dist}

Summary: fwupd wrapper for Qubes OS - VM scripts
License: GPLv2+
URL: https://www.qubes-os.org/

Requires:   cabextract
Requires:   fwupd
Requires:   gpg

Source0: %{name}-%{version}.tar.gz

%description
fwupd wrapper for Qubes OS

%prep
%setup -q

%install
make install-vm DESTDIR=$RPM_BUILD_ROOT

%post
gpg --homedir %GPG_DIR --import %PKI/GPG-KEY-Linux-Vendor-Firmware-Service
chown -R user:user %GPG_DIR

%files
%FWUPD_QUBES_DIR/fwupd-download-updates.sh
%FWUPD_QUBES_DIR/fwupd_usbvm_validate.py

%changelog
@CHANGELOG@
